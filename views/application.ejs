<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admission Application Form | Mindanao Kokusai Daigaku</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="/img/mkd-logo.png" alt="Mindanao Kokusai Daigaku Logo" height="60">
        Mindanao Kokusai Daigaku
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/apply">Apply</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/applications">Applications</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4 mb-5">
    <div class="card shadow-lg">
      <div class="card-header text-white" style="background-color: #042a63">
        <h3 class="text-center mb-0" style="color: #CD9B36">Admission Application Form</h3>
      </div>
      <div class="card-body">
        <form id="applicationForm" method="POST" action="/submit">
          <!-- Personal Information Section -->
          <div class="row mb-4">
            <div class="col-12">
              <h4 class="section-title">Personal Information</h4>
              <hr>
            </div>
            
            <div class="col-md-4 mb-3">
              <label for="firstName" class="form-label">First Name *</label>
              <input type="text" class="form-control" id="firstName" name="firstName" required>
            </div>
            
            <div class="col-md-4 mb-3">
              <label for="lastName" class="form-label">Last Name *</label>
              <input type="text" class="form-control" id="lastName" name="lastName" required>
            </div>
            
            <div class="col-md-4 mb-3">
              <label for="middleName" class="form-label">Middle Name *</label>
              <input type="text" class="form-control" id="middleName" name="middleName" placeholder="N/A (if not applicable)">
            </div>
            
            <div class="col-md-3 mb-3">
              <label for="suffix" class="form-label">Suffix</label>
              <input type="text" class="form-control" id="suffix" name="suffix" placeholder="Jr., Sr., I, II, III, IV, V (Leave blank if none)">
            </div>
            
            <div class="col-md-3 mb-3">
              <label for="contact" class="form-label">Contact *</label>
              <input type="text" class="form-control" id="contact" name="contact" required>
            </div>
            
            <div class="col-md-3 mb-3">
              <label for="gender" class="form-label">Gender *</label>
              <select class="form-select" id="gender" name="gender" required>
                <option value="" selected disabled>Select Gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
                <option value="Prefer not to say">Prefer not to say</option>
              </select>
            </div>
            
            <div class="col-md-3 mb-3">
              <label for="birthdate" class="form-label">Birthdate *</label>
              <input type="date" class="form-control" id="birthdate" name="birthdate" required>
            </div>
            
            <div class="col-md-6 mb-3">
              <label for="nationality" class="form-label">Nationality *</label>
              <input type="text" class="form-control" id="nationality" name="nationality" required>
            </div>
            
            <div class="col-md-6 mb-3">
              <label for="country" class="form-label">Country *</label>
              <input type="text" class="form-control" id="country" name="country" required>
            </div>
            
            <div class="col-12 mb-3">
              <label for="address" class="form-label">Complete Address *</label>
              <textarea class="form-control" id="address" name="address" rows="3" required></textarea>
            </div>
          </div>
          
          <!-- Educational Background Section -->
          <div class="row mb-4">
            <div class="col-12">
              <h4 class="section-title">Educational Background</h4>
              <hr>
            </div>
            
            <div class="col-md-6 mb-3">
              <label for="schoolName" class="form-label">School Name *</label>
              <input type="text" class="form-control" id="schoolName" name="schoolName" required>
            </div>
            
            <div class="col-md-6 mb-3">
              <label for="academicStrand" class="form-label">Academic Strand *</label>
              <input type="text" class="form-control" id="academicStrand" name="academicStrand" required>
            </div>
            
            <div class="col-md-6 mb-3">
              <label for="academicTrack" class="form-label">Academic Track *</label>
              <input type="text" class="form-control" id="academicTrack" name="academicTrack" required>
            </div>
            
            <div class="col-md-6 mb-3">
              <label for="yearGraduated" class="form-label">Year Graduated *</label>
              <input type="number" class="form-control" id="yearGraduated" name="yearGraduated" min="1900" max="2099" required>
            </div>
          </div>
          
          <!-- Course Preferences Section -->
          <div class="row mb-4">
            <div class="col-12">
              <h4 class="section-title">Course Preferences</h4>
              <hr>
            </div>
            
            <div class="col-md-4 mb-3">
              <label for="programChoice1" class="form-label">Program Choice 1 *</label>
              <input type="text" class="form-control" id="programChoice1" name="programChoice1" required>
            </div>
            
            <div class="col-md-4 mb-3">
              <label for="programChoice2" class="form-label">Program Choice 2 *</label>
              <input type="text" class="form-control" id="programChoice2" name="programChoice2" required>
            </div>
            
            <div class="col-md-4 mb-3">
              <label for="programChoice3" class="form-label">Program Choice 3 *</label>
              <input type="text" class="form-control" id="programChoice3" name="programChoice3" required>
            </div>
            
            <div class="col-md-4 mb-3">
              <label for="examDate" class="form-label">Exam Date *</label>
              <input type="date" class="form-control" id="examDate" name="examDate" required>
            </div>
            
            <div class="col-md-4 mb-3">
              <label for="schoolYear" class="form-label">School Year *</label>
              <select class="form-select" id="schoolYear" name="schoolYear" required>
                <option value="" selected disabled>Select School Year</option>
                <option value="2024-2025">2024-2025</option>
                <option value="2025-2026">2025-2026</option>
                <option value="2026-2027">2026-2027</option>
              </select>
            </div>
            
            <div class="col-md-4 mb-3">
              <label for="semester" class="form-label">Semester *</label>
              <select class="form-select" id="semester" name="semester" required>
                <option value="" selected disabled>Select Semester Year</option>
                <option value="First Semester">First Semester</option>
                <option value="Second Semester">Second Semester</option>
                <option value="Summer">Summer</option>
              </select>
            </div>
            
            <div class="col-12 mb-3">
              <label for="paymentProof" class="form-label">Proof of Payment *</label>
              <input type="file" class="form-control" id="paymentProof" accept="image/*,application/pdf" required>
              <input type="hidden" id="paymentProofData" name="paymentProofData">
              <input type="hidden" id="paymentProofType" name="paymentProofType">
              <div class="form-text">Upload receipt of payment (JPG, PNG, or PDF format)</div>
            </div>
          </div>
          
          <div class="d-grid gap-2 col-md-6 mx-auto mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Submit Application</button>
            <button type="reset" class="btn btn-outline-secondary">Reset Form</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <footer class="bg-dark text-white py-4 mt-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h5>Mindanao Kokusai Daigaku</h5>
          <p>The No.1 Japanese Institution in Mindanao since 2001</p>
        </div>
        <div class="col-md-6 text-md-end">
          <p>&copy; 2025 Mindanao Kokusai Daigaku. All rights reserved.</p>
        </div>
      </div>
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const form = document.getElementById('applicationForm');
      const fileInput = document.getElementById('paymentProof');
      const dataInput = document.getElementById('paymentProofData');
      const typeInput = document.getElementById('paymentProofType');
      
      form.addEventListener('submit', async function(event) {
        event.preventDefault();
        
        // Handle file upload separately
        if (fileInput.files.length > 0) {
          const file = fileInput.files[0];
          const reader = new FileReader();
          
          reader.onload = async function(e) {
            // Convert file
            const base64String = e.target.result;
            
            // hidden inputs
            dataInput.value = base64String;
            typeInput.value = file.type;
            
            // Submit form
            form.submit();
          };
          
          reader.readAsDataURL(file);
        } else {
          alert('Please select a payment proof file');
        }
      });
    });
  </script>
</body>
</html>