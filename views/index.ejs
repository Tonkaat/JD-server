<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ateneo de Davao University - Admission Application Form</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
        }
        
        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 20px;
        }
        
        header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .logo {
            width: 100px;
            margin-right: 20px;
        }
        
        h1 {
            color: #003366;
            margin: 0;
        }
        
        .form-section {
            background-color: #fff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }
        
        h2 {
            color: #003366;
            border-bottom: 1px solid #eee;
            padding-bottom: 10px;
            margin-top: 0;
        }
        
        .form-row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 15px;
        }
        
        .form-group {
            flex: 1 0 200px;
            margin-right: 15px;
            margin-bottom: 15px;
        }
        
        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        
        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 16px;
        }
        
        .required::after {
            content: " *";
            color: red;
        }
        
        .error-field {
            border: 1px solid red;
        }
        
        .has-error label {
            color: red;
        }
        
        .btn {
            background-color: #003366;
            color: white;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
        }
        
        .btn:hover {
            background-color: #002244;
        }
        
        #message-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
        }
        
        .message {
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 4px;
            color: white;
            font-weight: bold;
        }
        
        .success-message {
            background-color: #4CAF50;
        }
        
        .error-message {
            background-color: #f44336;
        }
        
        .info-message {
            background-color: #2196F3;
        }
        
        @media screen and (max-width: 768px) {
            .form-group {
                flex: 0 0 100%;
                margin-right: 0;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <header>
            <img src="logo.jpg" alt="Bisaya University Logo" class="logo">
            <h1>Admission Application Form</h1>
        </header>
        
        <form id="applicationForm">
            <div class="form-section" id="personalInfo">
                <h2>Personal Information</h2>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="firstName" class="required">First Name</label>
                        <input type="text" id="firstName" name="firstName" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="lastName" class="required">Last Name</label>
                        <input type="text" id="lastName" name="lastName" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="middleName" class="required">Middle Name</label>
                        <input type="text" id="middleName" name="middleName" class="form-control" placeholder="N/A (if not applicable)">
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="suffix">Suffix</label>
                        <input type="text" id="suffix" name="suffix" class="form-control">
                    </div>
                    
                    <div class="form-group">
                        <label for="contact" class="required">Contact</label>
                        <input type="tel" id="contact" name="contact" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="gender" class="required">Gender</label>
                        <select id="gender" name="gender" class="form-control" required>
                            <option value="">Select Gender</option>
                            <% const genders = ["Male", "Female", "Other", "Prefer not to say"]; %>
                            <% genders.forEach(gender => { %>
                                <option value="<%= gender %>"><%= gender %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="birthdate" class="required">Birthdate</label>
                        <input type="date" id="birthdate" name="birthdate" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="nationality" class="required">Nationality</label>
                        <input type="text" id="nationality" name="nationality" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="country" class="required">Country</label>
                        <input type="text" id="country" name="country" class="form-control" required>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group" style="flex: 1 0 100%;">
                        <label for="address">Complete Address</label>
                        <textarea id="address" name="address" class="form-control" rows="3"></textarea>
                    </div>
                </div>
            </div>
            
            <div class="form-section" id="educationalBackground">
                <h2>Educational Background</h2>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="schoolName" class="required">School Name</label>
                        <input type="text" id="schoolName" name="schoolName" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="academicStrand" class="required">Academic Strand</label>
                        <select id="academicStrand" name="academicStrand" class="form-control" required>
                            <option value="">Select Academic Strand</option>
                            <% const strands = ["STEM", "ABM", "HUMSS", "GAS", "TVL"]; %>
                            <% strands.forEach(strand => { %>
                                <option value="<%= strand %>"><%= strand %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="academicTrack">Academic Track</label>
                        <input type="text" id="academicTrack" name="academicTrack" class="form-control">
                    </div>
                    
                    <div class="form-group">
                        <label for="yearGraduated" class="required">Year Graduated</label>
                        <input type="number" id="yearGraduated" name="yearGraduated" class="form-control" 
                               min="1900" max="<%= new Date().getFullYear() %>" 
                               value="<%= new Date().getFullYear() %>" required>
                    </div>
                </div>
            </div>
            
            <div class="form-section" id="coursePreferences">
                <h2>Course Preferences</h2>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="programChoice1" class="required">Program Choice 1</label>
                        <input type="text" id="programChoice1" name="programChoice1" class="form-control" placeholder="Type to search program choice 1..." required>
                    </div>
                    
                    <div class="form-group">
                        <label for="programChoice2" class="required">Program Choice 2</label>
                        <input type="text" id="programChoice2" name="programChoice2" class="form-control" placeholder="Type to search program choice 2..." required>
                    </div>
                    
                    <div class="form-group">
                        <label for="programChoice3" class="required">Program Choice 3</label>
                        <input type="text" id="programChoice3" name="programChoice3" class="form-control" placeholder="Type to search program choice 3..." required>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="examDate" class="required">Exam Date</label>
                        <select id="examDate" name="examDate" class="form-control" required>
                            <option value="">Select Exam Date</option>
                            <% const examDates = [
                                "2025-05-15", "2025-05-30", "2025-06-15", 
                                "2025-06-30", "2025-07-15", "2025-07-30"
                            ]; %>
                            <% examDates.forEach(date => { %>
                                <option value="<%= date %>"><%= new Date(date).toLocaleDateString() %></option>
                            <% }); %>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="schoolYear" class="required">School Year</label>
                        <select id="schoolYear" name="schoolYear" class="form-control" required>
                            <option value="">Select School Year</option>
                            <% const currentYear = new Date().getFullYear(); %>
                            <% for(let i = 0; i < 5; i++) { %>
                                <option value="<%= currentYear + i %>-<%= currentYear + i + 1 %>">
                                    <%= currentYear + i %>-<%= currentYear + i + 1 %>
                                </option>
                            <% } %>
                        </select>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="proofOfPayment" class="required">Proof of Payment</label>
                        <input type="file" id="proofOfPayment" name="proofOfPayment" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="semester" class="required">Semester</label>
                        <select id="semester" name="semester" class="form-control" required>
                            <option value="">Select Semester Year</option>
                            <option value="First Semester">First Semester</option>
                            <option value="Second Semester">Second Semester</option>
                            <option value="Summer">Summer</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="form-row">
                <button type="submit" class="btn">Submit Application</button>
            </div>
        </form>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const applicationForm = document.getElementById('applicationForm');
            
            // Form submission
            if (applicationForm) {
                applicationForm.addEventListener('submit', function(e) {
                    e.preventDefault();
                    
                    if (validateForm()) {
                        submitApplication();
                    }
                });
            }
            
            function validateForm() {
                // Required fields from the form
                const requiredFields = [
                    'firstName', 'lastName', 'contact', 'gender', 
                    'birthdate', 'nationality', 'country', 
                    'schoolName', 'academicStrand', 'yearGraduated',
                    'programChoice1', 'programChoice2', 'programChoice3',
                    'examDate', 'schoolYear', 'proofOfPayment', 'semester'
                ];
                
                let isValid = true;
                
                requiredFields.forEach(field => {
                    const input = document.getElementById(field);
                    if (!input || !input.value.trim()) {
                        isValid = false;
                        highlightError(input);
                    } else {
                        removeErrorHighlight(input);
                    }
                });
                
                // Validate contact number
                const contactInput = document.getElementById('contact');
                if (contactInput && contactInput.value && !/^\+?[0-9]{10,15}$/.test(contactInput.value)) {
                    isValid = false;
                    highlightError(contactInput);
                    showMessage('Please enter a valid contact number', 'error');
                }
                
                return isValid;
            }
            
            function highlightError(element) {
                if (element) {
                    element.classList.add('error-field');
                    element.parentElement.classList.add('has-error');
                }
            }
            
            function removeErrorHighlight(element) {
                if (element) {
                    element.classList.remove('error-field');
                    element.parentElement.classList.remove('has-error');
                }
            }
            
            function submitApplication() {
                // Create FormData object for file upload
                const formData = new FormData(applicationForm);
                
                // Convert FormData to JSON for the API
                const jsonData = {
                    firstName: formData.get('firstName'),
                    lastName: formData.get('lastName'),
                    middleName: formData.get('middleName') || 'N/A',
                    suffix: formData.get('suffix') || '',
                    contact: formData.get('contact'),
                    gender: formData.get('gender'),
                    birthdate: formData.get('birthdate'),
                    nationality: formData.get('nationality'),
                    country: formData.get('country'),
                    address: formData.get('address'),
                    schoolName: formData.get('schoolName'),
                    academicStrand: formData.get('academicStrand'),
                    academicTrack: formData.get('academicTrack') || '',
                    yearGraduated: formData.get('yearGraduated'),
                    programChoice1: formData.get('programChoice1'),
                    programChoice2: formData.get('programChoice2'),
                    programChoice3: formData.get('programChoice3'),
                    examDate: formData.get('examDate'),
                    schoolYear: formData.get('schoolYear'),
                    semester: formData.get('semester')
                    // Note: proofOfPayment file will need to be handled separately
                };
                
                // Send data to server
                fetch('/api/submit-application', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(jsonData)
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showMessage(`Application submitted successfully! Your application ID is: ${data.applicationId}`, 'success');
                        applicationForm.reset();
                    } else {
                        showMessage(data.error || 'Failed to submit application', 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showMessage('An error occurred while submitting your application', 'error');
                });
            }
            
            function showMessage(message, type = 'info') {
                // Create message container if it doesn't exist
                let messageContainer = document.getElementById('message-container');
                if (!messageContainer) {
                    messageContainer = document.createElement('div');
                    messageContainer.id = 'message-container';
                    document.body.appendChild(messageContainer);
                }
                
                const messageDiv = document.createElement('div');
                messageDiv.className = `message ${type}-message`;
                messageDiv.textContent = message;
                
                messageContainer.appendChild(messageDiv);
                
                // Auto dismiss after 5 seconds
                setTimeout(() => {
                    messageContainer.removeChild(messageDiv);
                }, 5000);
            }
        });
    </script>
</body>
</html>